<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PageOneFragment">

   <androidx.core.widget.NestedScrollView
        android:layout_height="match_parent"
       android:layout_width="match_parent"
       android:id="@+id/scrollView"
      >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="@dimen/text1_padding"
               android:text="@string/music_text"
               android:textColor="@color/dark_gray"
               android:textSize="25sp"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/light_gray"
               android:textSize="18sp"
               android:padding="@dimen/text1_padding"
               android:text="@string/play_text"

               >
           </TextView>
           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/container_top_row"
              >
           </FrameLayout>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="@dimen/text1_padding"
               android:text="@string/recent_text"
               android:textColor="@color/dark_gray"
               android:textSize="25sp"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/light_gray"
               android:textSize="18sp"
               android:padding="@dimen/text1_padding"
               android:text="@string/recent_text2"

               />
           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/container_middle_row">
           </FrameLayout>


       </LinearLayout>
   </androidx.core.widget.NestedScrollView>

</FrameLayout>